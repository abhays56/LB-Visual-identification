@{
    ViewBag.Title = "Visual Recognition Demo";
    Layout = "_Layout";
}
<div class="tab-panels tab-views" role="tabpanel">
    <ul class="tab-panels--tab-list tab-views--tab-list" role="tablist">
        <li class="tab-panels--tab-list-item tab-views--tab-list-item base--li" role="presentation">
            <a class="tab-panels--tab tab-views--tab" href="/" aria-controls="panel1" role="tab">Try</a>
        </li>
        <li class="tab-panels--tab-list-item tab-views--tab-list-item base--li" role="presentation">
            <a class="tab-panels--tab tab-views--tab active" href="/train" aria-controls="panel2" role="tab">Train</a>
        </li>
        <li class="tab-panels--tab-list-item tab-views--tab-list-item base--li" role="presentation">
            <a class="tab-panels--tab tab-views--tab disabled" href="/test" aria-controls="panel3" role="tab">Test</a>
        </li>
    </ul>
    <div class="tab-panels--tab-content">
        <div class="loading train--loading">
            <img src="images/loading-indicator.gif" class="loading--image">
            <p class="base--p loading--message">Watson is training your new classifier. </p>
            <p class="base--p loading--message">This might take up to 4-5 minutes based on number of images.</p>
        </div>
        <div class="error train--error">
            <img src="images/icons/alert.svg" class="train--error-image error--image">
            <p class="base--p train--error-message error--message">Visual Recognition is not available right now...</p>
        </div>
        <div class="_container--training">
            <h1 class="base--h2 use--header">Train a demo classifier</h1>
            <div>To create a temporary trial classifier, select classes from the example image bundles.</div>
            <h2>Example Image Bundles</h2>
            <div class="license">
                Images used in this demo are licensed under Creative Commons 2.0 General License and are attributed
                <a class="base--a" href="https://github.com/watson-developer-cloud/visual-recognition-aspnet/tree/master/attributions" target="_blank">here</a>.
            </div>
            <div class="_training--examples">
                <div class="_training--example clickable" data-kind="dogs">
                    <h3>Dog Breeds</h3>
                    <img src="~/images/bundles/dogs/thumbnail.jpg">
                </div>
                <div class="_training--example clickable" data-kind="moleskine">
                    <h3>Moleskine Types</h3>
                    <img src="~/images/bundles/moleskine/thumbnail.jpg">
                </div>
                <div class="_training--example clickable" data-kind="insurance">
                    <h3>Insurance Claims</h3>
                    <img src="~/images/bundles/insurance/thumbnail.jpg">
                </div>
                <div class="_training--example clickable" data-kind="omniearth">
                    <h3>Satellite Imagery</h3>
                    <img src="~/images/bundles/omniearth/thumbnail.png">
                </div>
            </div>
            <div class="_examples" data-kind="dogs">
                <a class="select_all" data-kind="dogs">Select All</a>
                <div class="_examples--classes">
                    <div class="_examples--class _positive" data-name="goldenretriever" data-kind="dogs" data-realname="Golden Retriever">
                        <h4>Golden Retriever</h4>
                        <img src="~/images/bundles/dogs/goldenretriever-thumbnail.jpg" data-kind="dogs" data-name="goldenretriever">
                        <button class="_positive" data-name="goldenretriever">Select</button>
                    </div>
                    <div class="_examples--class _positive" data-name="husky" data-kind="dogs" data-realname="Husky">
                        <h4>Husky</h4>
                        <img src="~/images/bundles/dogs/husky-thumbnail.png" data-kind="dogs" data-name="husky">
                        <button class="_positive" data-name="husky">Select</button>
                    </div>
                    <div class="_examples--class _positive" data-name="dalmation" data-kind="dogs" data-realname="Dalmation">
                        <h4>Dalmation</h4>
                        <img src="~/images/bundles/dogs/dalmatian-thumbnail.png" data-kind="dogs" data-name="dalmation">
                        <button class="_positive" data-name="dalmation">Select</button>
                    </div>
                    <div class="_examples--class _positive" data-name="beagle" data-kind="dogs" data-realname="Beagle">
                        <h4>Beagle</h4>
                        <img src="~/images/bundles/dogs/beagle-thumbnail.png" data-kind="dogs" data-name="beagle">
                        <button class="_positive" data-name="beagle">Select</button>
                    </div>
                    <div class="_examples--class _negative" data-name="negatives" data-kind="dogs">
                        <h4>Non-Dogs</h4>
                        <img src="~/images/bundles/dogs/negatives-thumbnail.png" data-kind="dogs" data-name="negatives">
                        <button class="_negative" data-name="negatives">Select</button>
                    </div>
                </div>
                <div class="_examples--contact-sheet" data-kind="dogs">
                    <img>
                </div>
            </div>
            <div class="_examples" data-kind="insurance">
                <a class="select_all" data-kind="insurance">Select All</a>
